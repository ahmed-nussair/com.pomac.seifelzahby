<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_90sdp"
    android:layout_height="@dimen/_35sdp"
    android:background="@drawable/quantity_bar_background"
    android:padding="@dimen/_3sdp">

    <ImageView
        android:id="@+id/incrementItems"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_3sdp"
        android:background="@drawable/quantity_button_background"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/increment"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/quantityTextView"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_3sdp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/quantity_initial_value"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/decrementItems"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_3sdp"
        android:background="@drawable/quantity_button_background"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/decrement"
        tools:ignore="ContentDescription" />
</RelativeLayout>